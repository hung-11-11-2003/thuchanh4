@model IEnumerable<SachOnline.Models.CHUDE>

<ul class="list-group">
    <li class="list-group-item active" style="font-weight:bold; text-align:center">SÁCH THEO CHỦ ĐỀ</li>
    @foreach (var item in Model)
    {
        <li class="list-group-item">
            <a href="@Url.Action("SachTheoChuDe", "SachOnline", new { id = item.ChuDeID })" style="text-decoration: none; color: black;">
                @item.TenChuDe
            </a>
        </li>
    }
</ul><hr />
